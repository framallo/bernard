%li.dropdown
  = link_to 'Accounts', '#', :class => 'dropdown-toggle', 'data-toggle' => 'dropdown'
  %ul.dropdown-menu(role="menu" aria-labelledby="dLabel")
    %li= link_to "All accounts", accounts_path
    %li.divider
    - @menu_accounts.all.each do |account|
      %li
        = link_to account_path(account) do
          =account.name
          .label.label-inverse.pull-right
            = number_to_currency account.balance
