= form_for(@transaction) do |f|
  - if @transaction.errors.any?
    #error_explanation
      %h2
        = pluralize(@transaction.errors.count, "error") 
        prohibited this transaction from being saved:
      %ul
        -@transaction.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :account_id 
    %br
    = f.select :account_id, @accounts, {include_blank: true}, { class: 'chosen-select' }
  .field
    = f.label :date
    %br
    = f.text_field :date, class: :datepicker
  .field
    = f.label :payee_id
    %br
    = f.select :payee_id, @payees, {include_blank: true}, { class: 'chosen-select' }
  .field
    = f.label :payee_name
    %br
    = f.text_field :payee_name

  .field
    = f.label :amount
    %br
    = f.number_field :amount
  .field
    =f.label :cleared
    %br
    =f.check_box :cleared

  .actions
    = f.submit

