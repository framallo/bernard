<h1>Listing transactions</h1>

<table class="table table-striped table-bordered" >
  <thead>
    <tr>
      <th>Cleared</th>
      <th>Date</th>
      <th>Account</th>
      <th>Payee</th>
      <th>Category</th>
      <th>Amount</th>
      <th>Balance</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @transactions.group_by {|transaction| transaction.date.strftime("%m/%d/%Y") }.each_pair do |group, transactions|    %>
    <tr> <td colspan=8> 
        <%= group %> 
        <%= transactions.sum {|t| t.amount } %> 
    </td> </tr>
     <% transactions.each do |transaction| %>
        <tr>
          <td><%= check_box_tag(transaction.cleared) %></td>
          <td><%= transaction.date.strftime("%m/%d/%Y") %></td>
          <td><%= transaction.account.name %></td>
          <td><%= transaction.pm_payee %></td>
          <td><%= transaction.amount %></td>
          <td><%= transaction.balance %></td>
          <td>
            <%= link_to 'Show', transaction %>
          </td>
        </tr>
            <%= transaction.splits.count %>
            <% transaction.splits.each do |split| %>
              <tr>
                <td>
                  <%= split.pm_id %>
                </td>
              </tr>
            <% end %>
      <% end %>
    <% end %>
  </tbody>
</table>
<%= @transactions.sum {|s| s.amount } %>
<br>

<%= link_to 'New Transaction', new_transaction_path %>
<%= javascript_include_tag "//www.google.com/jsapi", "chartkick" %>
<%= line_chart Transaction.group_by_day(:created_at).count, :id => "users-chart", :height => "500px" %>
<%= pie_chart Transaction.active.group_by_day("date").count %>
