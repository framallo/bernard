<h1>Show Transaction</h1>
<p id="notice"><%= notice %></p>

<legend align="left">Pretty Title</legend>

<p>
  <strong>Account:</strong> 
  <%= @transaction.account_id %>
  <%= @transaction.account.name %>
</p>

<p>
  <strong>Created at:</strong>
  <%= @transaction.created_at %>
</p>

<p>
  <strong>Payee:</strong>
  <%= @transaction.payee_id %>
  <%= @transaction.payee_name %>
</p>

<p>
  <strong>Category:</strong>
  <%= @transaction.category_name_with_splits  %>
  <%= @transaction.splits.each do |split|  %>
    <br>
      <%= split.category.name %>
      <%= split.amount%>
      <%end%>
</p>

<p>
  <strong>Amount:</strong>
  <%= @transaction.amount %>
</p>

<p>
  <strong>Cleared:</strong>
  <%= @transaction.cleared %>
</p>

<p>
  <strong>Currency exchange rate:</strong>
  <%#= @transaction.currency_exchange_rate %>
</p>

<p>
  <strong>Balance:</strong>
  <%#= @transaction.balance %>
</p>


<%= link_to 'Edit', edit_transaction_path(@transaction) %> |
<%= link_to 'Back', transactions_path %>

